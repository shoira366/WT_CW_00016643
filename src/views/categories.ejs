<h1 class="pb-4">Explore Categories</h1>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/api">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Explore Categories</li>
    </ol>
</nav>

<div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3 mb-4">
    <% if(categories != "") { %>
    <% categories.forEach(function(category, index) { %>
    <a href="#" class="col text-center category_link">
        <div class="category_image shadow">
            <img src="/img/<%- category.image %>" alt="" loading="lazy">
        </div>
        <p class="pt-1"><%- category.title%></p>
    </a>
    <% }) %>
    <% } %>
</div>