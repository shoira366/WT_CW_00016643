<% if(result.recipe != null){ %>

<h1>Works</h1>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page"><%= result.recipe.name%></li>
    </ol>
</nav>

<div class="row">
    <div class="col-12 col-md-4">
        <img src="/img/<%= result.recipe.image%>" class="img-fluid sticky-top"
            style="top: 20px; object-fit: cover; width: 100%;" alt="<%= result.recipe.name %>" loading="lazy">
    </div>

    <div class="col-12 col-md-8">
        <div class="row">
            <div class="col-12 d-flex align-items-center justify-content-between">
                <h1><%= result.recipe.name %></h1>
                <div>
                    <a href="http://localhost:3000/update-recipe/<%= result.recipe.id  %>"><i
                            style="font-size: 30px; margin-right: 25px;" class="bi bi-pencil-square"></i></a>
                    <a id="delete_icon" onclick="check()" href="/">
                        <i style="font-size: 30px;" class="bi bi-trash"></i>
                    </a>
                </div>
            </div>
            <div class="col-12 mb-4">
                <i class="bi bi-tag"><%= result.getCategId.title %></i>
            </div>
            <div class="col-12" style="white-space: pre-line;">
                <h4>Cooking Instructions</h4>
                <%= result.recipe.description %>
            </div>
        </div>

        <div class="row pt-4">
            <div class="col-12">
                <h4>Ingredients</h4>
                <ul class="list-group list-group-flush">
                    <% result.recipe.ingredients.forEach(function(ingredient, index){ %>
                    <li class="list-group-item"><%=ingredient %></li>
                    <% }) %>
                </ul>
            </div>
        </div>
    </div>
</div>

<% } else { %>
<p>No item found</p>
<% } %>