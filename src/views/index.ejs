<h1 class="title">Find your meal for ingredients</h1>
<blockquote>"Let food be thy medicine and medicine be thy food" - Hippocrates</blockquote>

<div class="row row-cols-2 row-cols-lg-6 g-2 g-lg-3 py-4">
    <% if(categories != "") { %>
    <% categories.forEach(function(category, index) { %>
    <a href="/category/<%= category.title %>" class="col text-center category_link">
        <div class="category_image shadow">
            <img src="/img/<%- category.image %>" alt="" loading="lazy">
        </div>
        <p class="pt-1"><%- category.title%></p>
    </a>
    <% }) %>
    <% } %>

    <a href="/categories" class="col text-center category_link">
        <div class="category_image shadow">
            <img src="/img/view-all.jpg" alt="" loading="lazy">
        </div>
        <p class="pt-1">View All</p>
    </a>
</div>

<section class="pb-4 pt-4">
    <div class="d-flex mb-2 align-items-center">
        <h2>All Recipes</h2>
        <a href="#" class="ms-auto">View More</a>
    </div>

    <div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">

        <% if(allFoods.foods != "") { %>
        <% allFoods.foods.forEach(function(recipe, index) { %>
        <a href="/recipe/<%= recipe.id %>" class="col text-center category_link">
            <div class="category_image category_image--large shadow">
                <img src="/img/<%- recipe.image %>" alt="<%- recipe.name %>" loading="lazy">
            </div>
            <p class="pt-1"><%= recipe.name %></p>
        </a>
        <% }) %>
        <% } %>


    </div>
</section>

